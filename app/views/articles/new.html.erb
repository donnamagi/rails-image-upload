<div>
  <h1>New article</h1>
  <%= form_with(model: @article) do |form| %>

    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>

    <div>
      <%= form.submit %>
    </div>

  <% end %> 
</div>